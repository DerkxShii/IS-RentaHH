---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import ByNumber from "./ByNumber.astro";
import CtaButton from "../shared/CtaButton.astro";
import ByResult from "./ByResult.astro";
import myHeroGif from "public/assets/images/GIF_renta_handheld.gif";

export interface Props {
  title: string;
  preTitle: string;
  paragraph: string;
  className?: string;
}

const { preTitle, title, paragraph, className } = Astro.props;
---

<section class="w-full flex justify-center pt-20 lg:pt-28">
  <div class="w-[90%] 2xl:w-[70%]">
    <div class="grid lg:grid-cols-2 grid-cols-1 gap-8 lg:gap-0">
      <div
        class="py-10 lg:items-start lg:text-left flex flex-col items-center text-center lg:mr-20"
      >
        <h1
          class="px-0 text-4xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
             font-bold text-heading-1"
        >
          {preTitle}
          <span class="text-[#29628d]">{title}</span>
        </h1>
        <Paragraph className="mt-8 px-0">
          {paragraph}
        </Paragraph>

        <div class="mt-16 flex flex-col lg:items-start items-center">
          <div class="mb-5 lg:ml-[30%]">
            <a href="https://intelisystems.mx/contact/"><CtaButton /></a>
          </div>
          <div>
            <ByResult />
          </div>
        </div>
      </div>

      <div class="lg:block hidden relative">
        <Image
          src={myHeroGif}
          alt="Hero image"
          class="rounded-3xl object-contain h-full w-full"
        />
      </div>
    </div>
    <div class="lg:hidden block mt-10">
      <Image
        src={myHeroGif}
        alt="Hero image"
        class="rounded-3xl object-cover w-full max-h-96"
      />
    </div>
    <div class="mt-10">
      <ByNumber />
    </div>
  </div>
</section>

<style>
  section {
    padding-bottom: 4rem; /* Asegura espacio para ByNumber */
    position: relative; /* Para posicionar ByNumber absolutamente */
  }

  section > div > div:first-child {
    /* Contenedor del texto para asegurar la altura cuando el GIF estÃ¡ abajo */
  }

  section > div > .w-[90%] > .w-full.flex.justify-center.mt-10 {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 90%; /* Asegura el mismo ancho que el contenido principal */
  }
</style>
