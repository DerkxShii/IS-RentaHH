---
import { Image } from "astro:assets";
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import ByNumber from "./ByNumber.astro";

import myHeroImage1 from "../../assets/images/hero1.jpg";
import myHeroImage2 from "../../assets/images/hero2.jpg";
import myHeroImage3 from "../../assets/images/hero3.jpg";
import CtaButton from "../shared/CtaButton.astro";
import ByResult from "./ByResult.astro";
import GradiantText from "../shared/GradiantText.astro";
import myHeroGif from "../../assets/images/GIF RENTAHANDHELD (1).gif";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section class=`relative pt-32 lg:pt-32 xl:px-32 ${className}`>
  <Container
    className={"flex flex-col lg:flex-row gap-10 lg:gap-12 lg:px-4 sm:px-4 "}
  >
    <div
      class="relative flex flex-col items-center text-center lg:text-left lg:py-7 xl:py-8
        lg:items-start lg:max-w-lg max-w-full mx-auto lg:mx-0 lg:flex-1 lg:w-1/3"
    >
      <h1
        class="px-12 sm:px-10 md:px-0 text-4xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
             font-bold text-heading-1"
      >
        Renta
        <span class="text-[#29628d]">HANDHELD</span> con Nosotros
      </h1>
      <Paragraph className="mt-8 px-12 md:px-0">
        Optimice la gestión de su almacén con nuestra renta de dispositivos
        HandHeld. Ofrecemos equipos de última generación que facilitan la toma
        de inventario, mejorando la precisión y eficiencia en sus operaciones.
      </Paragraph>

      <div class="mt-16 w-full flex flex-col">
        <div class="lg:mx-auto mb-5">
          <a href="https://intelisystems.mx/contact/"><CtaButton /></a>
        </div>
        <div class="mx-auto">
          <ByResult />
        </div>
      </div>
    </div>

    <div
      class="flex flex-1 lg:w-1/3 lg:h-auto relative lg:max-w-4xl lg:mx-0 mx-auto max-w-xl"
    >
      <Image
        src={myHeroGif}
        alt="Hero gif"
        class="lg:absolute lg:w-full rounded-3xl object-cover lg:max-h-none max-h-96 sm:pt-12"
      />

      <!-- https://unsplash.com/photos/man-in-gray-hoodie-sitting-on-brown-wooden-chair-on-green-grass-field-during-daytime-3faX71BaNe0?utm_content=creditShareLink&utm_medium=referral&utm_source=unsplash -->
    </div>
  </Container>

  <ByNumber />
  <!-- <ByResult /> -->
</section>
